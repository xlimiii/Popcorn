<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.popcorn.view.general.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_actorDetailsFragment"
            app:destination="@id/actorDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_TVShowDetailsFragment"
            app:destination="@id/TVShowDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.popcorn.view.general.MovieListFragment"
        android:label="fragment_movie_list"
        tools:layout="@layout/fragment_movie_list" >

        <action
            android:id="@+id/action_movieListFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouriteListFragment"
        android:name="com.example.popcorn.view.general.FavouriteListFragment"
        android:label="fragment_favourite_list"
        tools:layout="@layout/fragment_favourite_list" >

        <action
            android:id="@+id/action_favouriteListFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/tvShowListFragment"
        android:name="com.example.popcorn.view.general.TvShowListFragment"
        android:label="fragment_tv_show_list"
        tools:layout="@layout/fragment_tv_show_list" >
        <action
            android:id="@+id/action_tvShowListFragment_to_TVShowDetailsFragment"
            app:destination="@id/TVShowDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/actorListFragment"
        android:name="com.example.popcorn.view.general.ActorListFragment"
        android:label="fragment_actor_list"
        tools:layout="@layout/fragment_actor_list" >
        <action
            android:id="@+id/action_actorListFragment_to_actorDetailsFragment"
            app:destination="@id/actorDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.popcorn.view.details.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_details" >
        <action
            android:id="@+id/action_movieDetailsFragment_to_actorDetailsFragment"
            app:destination="@id/actorDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/actorDetailsFragment"
        android:name="com.example.popcorn.view.details.PersonDetailsFragment"
        android:label="fragment_actor_details"
        tools:layout="@layout/fragment_details" >
        <action
            android:id="@+id/action_actorDetailsFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/TVShowDetailsFragment"
        android:name="com.example.popcorn.view.details.TVShowDetailsFragment"
        android:label="TVShowDetailsFragment" >
        <action
            android:id="@+id/action_TVShowDetailsFragment_to_actorDetailsFragment"
            app:destination="@id/actorDetailsFragment" />
    </fragment>
</navigation>