<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.popcorn.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

    </fragment>
    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.popcorn.view.MovieListFragment"
        android:label="fragment_movie_list"
        tools:layout="@layout/fragment_movie_list" >

        <action
            android:id="@+id/action_movieListFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouriteListFragment"
        android:name="com.example.popcorn.view.FavouriteListFragment"
        android:label="fragment_favourite_list"
        tools:layout="@layout/fragment_favourite_list" >

    </fragment>
    <fragment
        android:id="@+id/directorListFragment"
        android:name="com.example.popcorn.view.DirectorListFragment"
        android:label="fragment_director_list"
        tools:layout="@layout/fragment_director_list" />
    <fragment
        android:id="@+id/actorListFragment"
        android:name="com.example.popcorn.view.ActorListFragment"
        android:label="fragment_actor_list"
        tools:layout="@layout/fragment_actor_list" />
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.popcorn.view.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_movie_details" />
</navigation>